#include<stdio.h>
int main()
{
	int a[100][100];
	int i,j,r,c,sum,n;
	printf("Enter how many rows \n");
	scanf("%d",&r);
	printf("Enter how many cols \n");
	scanf("%d",&c);
	printf("Enter elements into array \n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("enter the row to add ");
   scanf("%d",&n);
	for(i=n;i<r;i++)
	{
	    sum=0; 
	    for(j=0;j<c;j++)
		{
			sum=sum+a[i][j]	;
		}
		printf(" %d Row sum= %d \n",i,sum);
		break;
	}
	return 0;
	}
  output:
  Enter how many rows 
2
Enter how many cols 
2
Enter elements into array 
5
6
8
7
enter the row to add 1
1 Row sum= 15 
